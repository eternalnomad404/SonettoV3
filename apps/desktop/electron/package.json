{
  "name": "sonetto-electron",
  "version": "1.0.0",
  "description": "Sonetto Desktop Application",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && electron .",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.sonetto.app",
    "productName": "Sonetto",
    "directories": {
      "output": "../../../dist/electron"
    },
    "files": [
      "dist/**/*",
      "../../ui/dist/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
